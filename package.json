{
  "name": "medici",
  "version": "5.0.0",
  "description": "Simple double-entry accounting for Node + Mongoose",
  "main": "build/index.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:node && npm run build:types",
    "build:node": "tsc -p .",
    "build:types": "dts-bundle-generator -o ./types/index.d.ts ./src/index.ts --project ./tsconfig.types.json  --no-check",
    "clean": "rimraf ./build && rimraf ./types",
    "prettier:fix": "prettier '**/*.ts' --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . ",
    "test": "ts-mocha --recursive './spec/*.ts' --preserve-symlinks",
    "test:coverage": "npm run clean && nyc ts-mocha --recursive './spec/**/*.spec.ts' "
  },
  "files": [
    "build/",
    "types/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/flash-oss/medici"
  },
  "keywords": [
    "double-entry",
    "accounting",
    "account",
    "finance",
    "mongodb",
    "mongoose"
  ],
  "author": {
    "name": "Jason Raede"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flash-oss/medici/issues"
  },
  "dependencies": {
    "mongoose": "^6.0.14"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.2.5"
    }
  },
  "engines": {
    "node": "^12.0.0"
  },
  "homepage": "https://github.com/flash-oss/medici",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "dts-bundle-generator": "^5.9.0",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.0.14",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "mongodb-memory-server": "^8.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
